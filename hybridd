#!/bin/sh
OLDPATH=$PATH
WHEREAMI=`pwd`
export PATH=$WHEREAMI/node_binaries/bin:"$PATH"
NODEINST=`which node`

if [ "$1" = "" ]; then

  echo " [i] starting hybridd..."
  NODE_VERSION=$($NODEINST --version)
  NODE_VERSION_MAJOR="`echo $NODE_VERSION | cut -d'.' -f1`"
  NODE_VERSION_MINOR="`echo $NODE_VERSION | cut -d'.' -f2`"

  if [ "$NODE_VERSION_MAJOR" != "v8" ] || [ $NODE_VERSION_MINOR -lt 12 ]; then
      echo " [!] Warning: hybridd expects Node v8.12.0 or higher (found node $NODE_VERSION)"
      echo "             $NODEINST"
      read -p " [?] Do you wish to continue? [y/N] " CONFIRM
      if [ "$CONFIRM" != "y" ]; then
          PATH=$OLDPATH
          echo "\n [i] Stopped hybridd."
          exit 0
      fi
  else
      echo " [i] using node executable $NODEINST $NODE_VERSION "
  fi


  cd lib
  mkdir -p $WHEREAMI/var/log
  node hybridd.js 2>&1 | tee $WHEREAMI/var/log/hybridd.log
  echo " [i] stopped hybridd"
  echo
elif [ "$1" = "start" ]; then
  ./hybridd.start
else
    cd lib
    node hcmd.js $@
fi

PATH=$OLDPATH
