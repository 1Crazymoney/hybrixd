{
  "symbol":"xcp",
  "name":"Counterparty",
  "module":"quartz",
  "mode":"xcp.main",
  "factor":8,
  "fee":0.05,
  "contract":"undefined",
  "host":"https://wallet.counterwallet.io",
  "cache":120000,
  "throttle":5,
  "api-documentation":"https://counterparty.io/docs/counterblock_api/",
  "quartz":{
    "init" : [
      "curl('asset://$symbol','/_api','POST',{'jsonrpc':'2.0','id':0,'method':'is_ready','params':{}},{'content-type':'text/plain'})",
      "logs(1,'module $symbol: '+(data?'connected':'failed connection')+' to host [$host]')"
    ],
    "status" : [
       "stop(1,'Not yet implemented!')"
    ],
    "unspent" : [
       "stop(1,'Not yet implemented!')"
    ],
     "balance" : [
       "curl('asset://$symbol','/_api','POST',{'jsonrpc':'2.0','id':0,'method':'get_chain_address_info','params':{'addresses':['$1'],'with_uxtos':true,'with_last_txn_hashes':5}},{'content-type':'text/plain'})",
       "tran('.result[0].info.balance',data,2,1)",
       "stop(1,'No result!')",
       "pass(data)"
     ],
    "push" : [
      "curl('asset://$symbol','/_api','POST',{'jsonrpc':'2.0','id':0,'method':'broadcast_tx','params':{'signed_tx_hex':'$1'}},{'content-type':'text/plain'})",
      "test(data,2,1,data)",
      "stop(1,'Broadcast failed!')",
      "tran('.result',data,2,1)",
      "stop(1,'No result!')",
      "pass(data)"
    ],
    "factor" : [
      "pass('$factor')"
    ],
    "history" : [
       "curl('asset://$symbol','/_api','POST',{ 'method': 'get_balances','params': {'filters': [{'field': 'address', 'op': '==', 'value': '14qqz8xpzzEtj6zLs3M1iASP7T4mj687yq'}, {'field': 'address', 'op': '==', 'value': '1bLockjTFXuSENM8fGdfNUaWqiM4GPe7V'}],'filterop': 'or'},'jsonrpc': '2.0', 'id': 0})"
    ],
    "contract" : [
       "stop(1,'Not yet implemented!')"
    ],
    "fee" : [
      "pass('$fee')"
    ]
  }
}
