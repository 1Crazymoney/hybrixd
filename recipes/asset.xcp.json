{
  "symbol":"xcp",
  "name":"Counterparty",
  "module":"quartz",
  "mode":"bitcoinjslib.counterparty",
  "factor":8,
  "feeCounterpartyTX":0.00000546,
  "fee-symbol":"btc",
  "keygen-base":"btc",
  "contract":"XCP",
  "host":["https://counterwallet.coindaddy.io","https://wallet.counterwallet.io"],
  "timeout":32000,
  "cache":60000,
  "throttle":5,
  "api-documentation":"https://counterparty.io/docs/counterblock_api/",
  "quartz":{
    "unspent" : [
      "rout '/asset/${keygen-base}/fee'",
      "math '+$feeCounterpartyTX'",
      "rout '/asset/${keygen-base}/unspent/$1/$'",
      "done"
    ],
    "balance" : [
      "time $timeout",
      "data {'jsonrpc':'2.0','id':0,'method':'get_normalized_balances','params':{'addresses':['$1']}}",
      "curl asset://$symbol /_api POST {'content-type':'text/plain'}",
      "tran '.result' 2 1",
      "fail 'No result!'",
      "find {'asset':'$contract'} 3 1",
      "data '0.00000000'",
      "jump 3",
      "tran '[0].quantity'",
      "atom"
    ],
    "push" : [
      "rout '/asset/$keygen-base/push/$1'",
      "done"
    ],
    "pushAPI" : [
      "data {'jsonrpc':'2.0','id':0,'method':'broadcast_tx','params':{'signed_tx_hex':'$1'}}",
      "curl asset://$symbol /_api POST {'content-type':'text/plain'}",
      "test $ 2 1",
      "fail 'Broadcast failed!'",
      "tran '.result' 2 1",
      "fail 'No result!'",
      "done"
    ],


    "transaction" : [
      "data {'jsonrpc':'2.0','id':0,'method':'get_chain_txns_status','params':{txn_hashes:['$1']}}",
      "curl asset://$symbol /_api POST {'content-type':'text/plain'}",
      "tran {id:.tx_hash,confirmed:.confirmations,time:.blocktime}",
      "#TODO missing data for source,dest,amount, fee",
      "done"
    ],
    "history" : [
      "rout '/asset/$keygen-base/history/$1/$2/$3'"
    ],
    "fee" : [
      "rout '/asset/btc/fee'",
      "math '+$feeCounterpartyTX'"
    ],
    "sample" : [
      "done {address:'1AeqgtHedfA2yVXH6GiKLS2JGkfWfgyTC6',transaction:'8162e98734c94b5b32682ce43041c2fdd5a6bf957c0684e42092284a4478bd0b'}"
    ],
    "test":[
      "done {hash:0DA73680,unspent:{'unspents':[{'script':'76a91493b4fa1cbfc9b379bee71ef2c9112d3bab6c9d688ac','amount':'1010','txid':'8169bee7dda515a24912023485497cb100ad4730b58d8be0bb963acd91b29c1f','txn':0}],'change':'0'}}"
    ]
  }
}
